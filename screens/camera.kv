<CameraScreen>:
    name: "camera"

    BoxLayout:
        orientation: "vertical"
        spacing: 10
        padding: [20,20]

        BoxLayout:
            size_hint_y: None
            height: self.width
            size_hint_x: 1
            pos_hint: {"center_x": 0.5}

            Image:
                id: camera_widget
                size_hint_y: 0.8
                allow_stretch: False
                keep_ratio: True

        BoxLayout:
            orientation: "horizontal"
            spacing: 5
            size_hint_y: 0.4
            halign: "center"
            valign: "center"


            Button:
                id: add_plant_button
                text: "add a plant!"
                font_name: "SecondaryFont"
                font_size: 30
                bold: True
                background_normal: ""
                size_hint_x: 0.5
                background_color: app.colours["accent"]  
                on_release: app.capture_picture(True)

            Button:
                id: plant_healthy_button
                text: "plant healthy?"
                font_name: "SecondaryFont"
                font_size: 30
                bold: True
                background_normal: ""
                size_hint_x: 0.5
                background_color: app.colours["accent"]  
                on_release: app.capture_picture(False)

        Label:
            id: camera_label
            text: "Take a picture of your plant!"
            font_size: 30
            font_name: "SecondaryFont"
            color: 0,0,0,1
            halign: "center"
